<?xml version="1.0" encoding="utf-8"?>
<layout onlaunch="launch">
    <row>
        <!-- song information -->
    </row>
    <row>
        <!-- previous | play/pause | next -->
        <button icon="previous" ontap="previous" />
        <button icon="playpause" ontap="playpause" />
        <button icon="next" ontap="next" />
    </row>
    <row>
        <!-- like | dislike -->
        <button icon="like" ontap="like" />
        <button icon="dislike" ontap="dislike" />
    </row>
    <row>
        <!-- volume | mute -->
        <slider text="Volume" ondone="volume" progress="50" progressmax="100" />
        <button icon="mute" ontap="mute" />
    </row>
</layout>